@model Product

@{
    ViewData["Title"] = $"{@Model.ProductID}";
}

<h3>@Model.Name Information</h3>

<table class = "table">
    <tr>
        <!-- Table headers -->
        <th>Product ID</th>
        <th>Name</th>
        <th>Price</th>
        <th>Category ID</th>
        <th>On Sale</th>
        <th>StockLevel</th>
    </tr>
    <tr>
        <!-- Table row with product details -->
        <td>@Model.ProductID</td>
        <td>@Model.Name</td>
        <td>@Model.Price</td>
        <td>@Model.CategoryID</td>
        <td>@Model.OnSale</td>
        <td>@Model.StockLevel</td>
    </tr>
</table>
<!-- Link to update the product, passing the ProductID as a parameter. -->
<div style="display: block">
    <a href="/Product/UpdateProduct/@Model.ProductID">Update this Product</a>
</div>

<!-- Link to navigate back to the list view of products. -->
<div style="display: block">
    <a href="/Product/Index">Back to List View</a>
</div>
<div style="display: block">

    @using (Html.BeginForm("DeleteProduct", "Product", "Post"))
    {
        <!-- Begins a form for posting a delete request to the DeleteProduct action in the Product controller. -->
        <input type="hidden" asp-for="ProductID" value="@Model.ProductID" />
        <!-- Submit button for deleting the product, with a confirmation prompt. -->
        <input type="submit" onclick="return confirm('Are you sure?')" value="Delete this product" />
    }
</div>